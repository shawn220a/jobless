{
  "name": "google-jwt-auth",
  "version": "1.0.0",
  "description": "sample code for node(express), passport(google-oauth2) + jwt token + mongoDB configuration",
  "main": "app.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "cd client && npm run build"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "if-env": "^1.0.4",
    "body-parser": "^1.18.2",
    "connect-flash": "*",
    "dotenv": "^8.2.0",
    "express": "^4.16.2",
    "express-handlebars": "*",
    "express-messages": "*",
    "express-session": "*",
    "express-validator": "*",
    "jsonwebtoken": "^8.5.1",
    "passport-jwt": "^4.0.0",
    "mongodb": "^3.3.2",
    "mongoose": "^5.7.1",
    "passport": "^0.4.1",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "css-loader": "^3.4.2",
    "nodemon": "^2.0.2",
    "pushover-notifications": "^1.2.2"
  }
}
